{
  "version": "1.0.0",
  "description": "LegalStatuteAnalysis 系統配置",
  "llm_config": {
    "provider": "openai",
    "model": "gpt-4o-mini",
    "temperature": 0,
    "max_tokens": 4000,
    "timeout": 30
  },
  "embedding_config": {
    "model": "text-embedding-3-small",
    "batch_size": 100,
    "similarity_threshold": 0.7
  },
  "processing_config": {
    "max_concurrent_requests": 5,
    "retry_attempts": 3,
    "retry_delay": 1
  },
  "quality_metrics": {
    "target_accuracy": 0.9,
    "target_speed_per_question": 5,
    "min_confidence_score": 0.6
  },
  "output_config": {
    "html_template": "default",
    "pdf_orientation": "portrait",
    "include_metadata": true
  }
}
